@model StreamingZeiger.Models.Movie

@{
    ViewData["Title"] = "Film löschen";
}

<h2>Film löschen</h2>

<h3>Bist du sicher, dass du diesen Film löschen möchtest?</h3>
<div>
    <h4>@Model.Title</h4>
    <p>@Model.Description</p>
    <p><strong>Erscheinungsjahr:</strong> @Model.Year</p>
</div>

<form asp-action="DeleteMovie" method="post">
    <input type="hidden" asp-for="Id" />
    <button type="submit" class="btn btn-danger">Löschen</button>
    <a asp-action="Index" class="btn btn-secondary">Abbrechen</a>
</form>
