@model StreamingZeiger.Models.Series
@{
	ViewData["Title"] = "Serie hinzufügen";
}

<div class="container mt-4">
	<h2>Serie hinzufügen</h2>
	<form asp-action="CreateSeries" method="post" enctype="multipart/form-data" class="row g-3">

		<!-- Basisfelder -->
		<div class="col-md-6">
			<label for="Title" class="form-label">Titel</label>
			<input asp-for="Title" id="Title" class="form-control" />
			<span asp-validation-for="Title" class="text-danger"></span>
		</div>

		<div class="col-md-6">
			<label for="OriginalTitle" class="form-label">Originaltitel</label>
			<input asp-for="OriginalTitle" id="OriginalTitle" class="form-control" />
			<span asp-validation-for="OriginalTitle" class="text-danger"></span>
		</div>

		<div class="col-md-3">
			<label for="StartYear" class="form-label">Startjahr</label>
			<input asp-for="StartYear" id="StartYear" class="form-control" />
			<span asp-validation-for="StartYear" class="text-danger"></span>
		</div>

		<div class="col-md-3">
			<label for="EndYear" class="form-label">Endjahr</label>
			<input asp-for="EndYear" id="EndYear" class="form-control" />
			<span asp-validation-for="EndYear" class="text-danger"></span>
		</div>

		<div class="col-12">
			<label for="Description" class="form-label">Beschreibung</label>
			<textarea asp-for="Description" id="Description" class="form-control"></textarea>
			<span asp-validation-for="Description" class="text-danger"></span>
		</div>

		<div class="col-md-6">
			<label for="GenreCsv" class="form-label">Genres (Komma-getrennt)</label>
			<input type="text" id="GenreCsv" name="GenreCsv" class="form-control" />
		</div>

		<div class="col-12">
			<label for="CastCsv" class="form-label">Besetzung (Komma-getrennt)</label>
			<input type="text" id="CastCsv" name="CastCsv" class="form-control" />
		</div>

		<div class="col-md-4">
			<label asp-for="Director" class="form-label"></label>
			<input asp-for="Director" class="form-control" id="Director" />
		</div>

		<div class="col-md-6">
			<label for="TrailerUrl" class="form-label">Trailer URL</label>
			<input asp-for="TrailerUrl" id="TrailerUrl" class="form-control" />
			<span asp-validation-for="TrailerUrl" class="text-danger"></span>
		</div>

		<div class="col-md-6">
			<label asp-for="PosterFile" class="form-label">Poster</label>
			<input type="text" name="PosterFile" class="form-control" id="PosterFile" />
		</div>

		<!-- Verfügbarkeit -->
		<div class="col-12">
			<label class="form-label">Verfügbarkeit</label><br />
			@foreach (var service in new string[] { "Netflix", "Prime Video", "Disney+" })
			{
				<div class="form-check form-check-inline">
					<input class="form-check-input" type="checkbox" name="Services" value="@service" />
					<label class="form-check-label">@service</label>
				</div>
			}
		</div>

		<!-- Seasons & Episodes -->
		<div class="col-12">
			<h4>Staffeln & Episoden</h4>
			<div id="seasonsContainer"></div>
			<button type="button" class="btn btn-outline-primary mt-2" id="addSeason">Staffel hinzufügen</button>
		</div>

		<div class="mb-3 mt-3">
			<label for="tmdbId">TMDb ID</label>
			<input type="number" id="tmdbId" class="form-control" placeholder="TMDb ID eingeben">
			<button type="button" id="importTmdbSeries" class="btn btn-primary mt-2">Importieren</button>
		</div>

		<div class="col-12">
			<button type="submit" formaction="/Admin/CreateSeries" formmethod="post" class="btn btn-success mt-3">Speichern</button>
		</div>
	</form>
</div>

@section Scripts {
	<script>
		let seasonIndex = 0;

		function refreshSeasonIndex() {
			seasonIndex = document.querySelectorAll('.season-card').length;
		}

		function createEpisodeInput(seasonIdx, episodeIdx) {
			return `
				<div class="input-group mb-2">
					<span class="input-group-text">Episode ${episodeIdx + 1}</span>
					<input type="number" name="Seasons[${seasonIdx}].Episodes[${episodeIdx}].EpisodeNumber" class="form-control" placeholder="Nummer" required />
					<input type="text" name="Seasons[${seasonIdx}].Episodes[${episodeIdx}].Title" class="form-control" placeholder="Titel" required />
					<input type="text" name="Seasons[${seasonIdx}].Episodes[${episodeIdx}].Description" class="form-control" placeholder="Beschreibung" />
					<button type="button" class="btn btn-danger" onclick="this.closest('.input-group').remove()">Löschen</button>
				</div>
			`;
		}

		function createSeasonInput(idx) {
			return `
				<div class="card mb-3 season-card p-3">
					<h5>Staffel ${idx + 1}
						<button type="button" class="btn btn-sm btn-danger float-end" onclick="this.closest('.season-card').remove(); refreshSeasonIndex();">Löschen</button>
					</h5>
					<input type="number" name="Seasons[${idx}].SeasonNumber" class="form-control mb-2" placeholder="Staffelnummer" required />
					<button type="button" class="btn btn-sm btn-outline-secondary mb-2" onclick="addEpisode(${idx})">Episode hinzufügen</button>
					<div class="episodesContainer"></div>
				</div>
			`;
		}

		function addEpisode(seasonIdx) {
			const seasonCard = document.getElementsByClassName('season-card')[seasonIdx];
			const episodesContainer = seasonCard.querySelector('.episodesContainer');
			const episodeIdx = episodesContainer.children.length;
			episodesContainer.insertAdjacentHTML('beforeend', createEpisodeInput(seasonIdx, episodeIdx));
		}

		document.getElementById('addSeason').addEventListener('click', () => {
			const container = document.getElementById('seasonsContainer');
			container.insertAdjacentHTML('beforeend', createSeasonInput(seasonIndex));
			refreshSeasonIndex();
		});
	</script>
	<script src="~/js/importseries.js"></script>
}
