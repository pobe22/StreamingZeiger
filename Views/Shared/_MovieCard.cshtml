@model Movie
@{
    bool inWatchlist = ViewData["InWatchlist"] as bool? ?? false;
}

<div class="card h-100">
    <img src="@Url.Content(Model.PosterFile)" class="card-img-top" alt="@Model.Title" />
    <div class="card-body d-flex flex-column">
        <h5 class="card-title">@Model.Title (@Model.Year)</h5>

        <!-- Bewertung mit Sternen -->
        <div class="my-2">
            <span class="text-warning">
                @for (int i = 1; i <= 5; i++)
                {
                    if (i <= Math.Round(Model.Rating / 2))
                    {
                        <i class="bi bi-star-fill"></i>
                    }
                    else
                    {
                        <i class="bi bi-star"></i>
                    }
                }
            </span>
            <span class="ms-2">(@Model.Rating.ToString("0.0")/10)</span>
        </div>

        <p class="card-text text-truncate">@Model.Description</p>

        <div class="mt-auto">
            <!-- Streaming-Dienste -->
            <div class="mb-2">
                @foreach (var s in Model.AvailabilityByService.Where(x => x.Value))
                {
                    <span class="badge bg-primary">@s.Key</span>
                }
            </div>

            <div class="d-flex flex-wrap gap-2 mt-2">
                <a class="btn btn-sm btn-outline-primary" href="@Url.Action("Details", "Movies", new { id = Model.Id })">
                    Details
                </a>              
            </div>
        </div>
    </div>
</div>
