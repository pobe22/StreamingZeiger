@model StreamingZeiger.Models.Movie
@{
    ViewData["Title"] = "Film hinzufügen";
}

<div class="container mt-4">
    <h2>Film hinzufügen</h2>
    <form asp-action="Create" method="post" enctype="multipart/form-data" class="row g-3">
        <div class="col-md-6">
            <label asp-for="Title" class="form-label"></label>
            <input asp-for="Title" class="form-control" />
        </div>
        <div class="col-md-6">
            <label asp-for="OriginalTitle" class="form-label"></label>
            <input asp-for="OriginalTitle" class="form-control" />
        </div>
        <div class="col-md-4">
            <label asp-for="Year" class="form-label"></label>
            <input asp-for="Year" type="number" class="form-control" />
        </div>
        <div class="col-md-4">
            <label asp-for="DurationMinutes" class="form-label"></label>
            <input asp-for="DurationMinutes" type="number" class="form-control" />
        </div>
        <div class="col-md-4">
            <label asp-for="Director" class="form-label"></label>
            <input asp-for="Director" class="form-control" />
        </div>
        <div class="col-12">
            <label asp-for="Description" class="form-label"></label>
            <textarea asp-for="Description" class="form-control"></textarea>
        </div>
        <div class="col-12">
            <label for="Cast" class="form-label">Besetzung (Komma-getrennt)</label>
            <input type="text" name="CastCsv" class="form-control" />
        </div>
        <div class="col-md-6">
            <label asp-for="PosterFile" class="form-label">Poster</label>
            <input type="file" name="PosterUpload" class="form-control" />
        </div>
        <div class="col-md-6">
            <label asp-for="TrailerUrl" class="form-label"></label>
            <input asp-for="TrailerUrl" class="form-control" />
        </div>
        <div class="col-12">
            <label class="form-label">Verfügbarkeit</label><br />
            <div class="form-check form-check-inline">
                <input class="form-check-input" type="checkbox" name="Services" value="Netflix" /> Netflix
            </div>
            <div class="form-check form-check-inline">
                <input class="form-check-input" type="checkbox" name="Services" value="Prime Video" /> Prime Video
            </div>
            <div class="form-check form-check-inline">
                <input class="form-check-input" type="checkbox" name="Services" value="Disney+" /> Disney+
            </div>
        </div>
        <div class="col-12">
            <button type="submit" class="btn btn-success">Speichern</button>
        </div>
    </form>
</div>
