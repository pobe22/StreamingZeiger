@model StreamingZeiger.Models.Movie
@{
    ViewData["Title"] = "Film hinzufügen";
}

<div class="container mt-4">
    <h2>Film hinzufügen</h2>
    <form asp-action="Create" method="post" enctype="multipart/form-data" class="row g-3">
        <div class="col-md-6">
            <label asp-for="Title" class="form-label"></label>
            <input asp-for="Title" class="form-control" id="Title" />
        </div>
        <div class="col-md-6">
            <label asp-for="OriginalTitle" class="form-label"></label>
            <input asp-for="OriginalTitle" class="form-control" id="OriginalTitle" />
        </div>
        <div class="col-md-4">
            <label asp-for="Year" class="form-label"></label>
            <input asp-for="Year" type="number" class="form-control" id="Year" />
        </div>
        <div class="col-md-4">
            <label asp-for="DurationMinutes" class="form-label"></label>
            <input asp-for="DurationMinutes" type="number" class="form-control" />
        </div>
        <div class="col-md-4">
            <label asp-for="Director" class="form-label"></label>
            <input asp-for="Director" class="form-control" id="Director" />
        </div>
        <div class="col-12">
            <label asp-for="Description" class="form-label"></label>
            <textarea asp-for="Description" class="form-control" id="Description"></textarea>
        </div>
        <div class="col-12">
            <label for="CastCsv" class="form-label">Besetzung (Komma-getrennt)</label>
            <input type="text" name="CastCsv" id="CastCsv" class="form-control" />
        </div>
        <div class="col-12">
            <label for="GenreCsv" class="form-label">Genres (Komma-getrennt)</label>
            <input type="text" class="form-control" id="GenreCsv" name="GenreCsv" />
        </div>
        <div class="col-md-6">
            <label asp-for="PosterFile" class="form-label">Poster</label>
            <input type="text" name="PosterFile" class="form-control" id="PosterFile" />
        </div>
        <div class="col-md-6">
            <label asp-for="TrailerUrl" class="form-label"></label>
            <input asp-for="TrailerUrl" class="form-control" id="TrailerUrl" />
        </div>
        <div class="col-12">
            <label class="form-label">Verfügbarkeit</label><br />
            @foreach (var service in new string[] { "Netflix", "Prime Video", "Disney+" })
            {
                <div class="form-check form-check-inline">
                    <input class="form-check-input" type="checkbox" name="Services" value="@service" />
                    <label class="form-check-label">@service</label>
                </div>
            }
        </div>
        <div class="col-12">
            <button type="submit" class="btn btn-success">Speichern</button>
        </div>
    </form>

    <div class="mb-3 mt-3">
        <label for="tmdbId">TMDb ID</label>
        <input type="number" id="tmdbId" class="form-control" placeholder="TMDb ID eingeben">
        <button type="button" id="importTmdb" class="btn btn-primary mt-2">Importieren</button>
    </div>
</div>

@section Scripts {
    <script>
        document.getElementById('importTmdb').addEventListener('click', async () => {
            const tmdbId = document.getElementById('tmdbId').value;
            if (!tmdbId) return alert('Bitte TMDb ID eingeben');

            const response = await fetch(`/Admin/ImportFromTmdb?tmdbId=${tmdbId}`);
            if (!response.ok) return alert('Fehler beim Abrufen von TMDb');

            const movie = await response.json();

            // Formularfelder befüllen
            document.getElementById('Title').value = movie.title;
            document.getElementById('OriginalTitle').value = movie.originalTitle;
            document.getElementById('Description').value = movie.description;
            document.getElementById('Year').value = movie.year;
            document.getElementById('Director').value = movie.director;
            document.getElementById('PosterFile').value = movie.posterFile;
            document.getElementById('TrailerUrl').value = movie.trailerUrl;
            document.getElementById('CastCsv').value = movie.cast.join(', ');
            document.getElementById('GenreCsv').value = movie.movieGenres.map(g => g.genre.name).join(', ');
        });
    </script>
}