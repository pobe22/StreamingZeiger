@model IEnumerable<StreamingZeiger.Models.Movie>
@{
    ViewData["Title"] = "Admin - Filme";
}

<div class="container mt-4">
    <h2>Filme verwalten</h2>
    <a asp-action="Create" class="btn btn-success mb-3">Neuen Film hinzufügen</a>

    <ul class="list-group">
        @foreach (var movie in Model)
        {
            <li class="list-group-item d-flex justify-content-between align-items-center">
                <div>
                    <strong>@movie.Title</strong>
                    <span class="text-muted">(@movie.Year) – @movie.Director</span>
                </div>
                <div>
                    <a asp-action="Edit" asp-route-id="@movie.Id" class="btn btn-primary btn-sm me-2">Bearbeiten</a>
                    <a asp-action="Delete" asp-route-id="@movie.Id" class="btn btn-danger btn-sm">Löschen</a>
                </div>
            </li>
        }
    </ul>
</div>
