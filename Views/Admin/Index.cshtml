@model IEnumerable<StreamingZeiger.Models.Movie>
@{
    ViewData["Title"] = "Admin - Filme";
}

<div class="container mt-4">
    <h2>Filme verwalten</h2>
    <a asp-action="Create" class="btn btn-success mb-3">Neuen Film hinzufügen</a>

    <table class="table table-striped">
        <thead>
            <tr>
                <th>Titel</th>
                <th>Jahr</th>
                <th>Director</th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var movie in Model)
            {
                <tr>
                    <td>@movie.Title</td>
                    <td>@movie.Year</td>
                    <td>@movie.Director</td>
                    <td>
                        <a asp-action="Edit" asp-route-id="@movie.Id" class="btn btn-primary btn-sm">Bearbeiten</a>
                        <a asp-action="Delete" asp-route-id="@movie.Id" class="btn btn-danger btn-sm">Löschen</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>
