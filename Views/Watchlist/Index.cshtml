@model List<StreamingZeiger.Models.Movie>
@{
    ViewData["Title"] = "Watchlist";
}

<div class="container mt-4">
    <h1>Meine Watchlist</h1>
    <div class="row">
        @if (Model.Count == 0)
        {
            <p>Noch keine Filme in der Watchlist.</p>
        }
        else
        {
            @foreach (var movie in Model)
            {
                <div class="col-md-3 mb-4">
                    <div class="card h-100">
                        <img src="@Url.Content(movie.PosterFile)" class="card-img-top" alt="@movie.Title Poster" />
                        <div class="card-body">
                            <h5 class="card-title">@movie.Title (@movie.Year)</h5>
                            <a href="@Url.Action("Details", "Movies", new { id = movie.Id })" class="btn btn-sm btn-primary">Details</a>
                            <a href="@Url.Action("Remove", "Watchlist", new { id = movie.Id })" class="btn btn-sm btn-danger ms-2">
                                <i class="bi bi-trash"></i> Entfernen
                            </a>
                        </div>
                    </div>
                </div>
            }
        }
    </div>
</div>
